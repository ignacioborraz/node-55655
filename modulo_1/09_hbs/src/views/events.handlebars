<main class="flex-grow-1 p-3 my-2">
  <h2 class="text-center">ALL OUR MOVIES!</h2>
  <section class="d-flex flex-grow-1 flex-wrap justify-content-evenly">
  {{#each events}}
    <div class="card m-2" style="width: 320px;">
      <img src="{{this.poster}}" style="height: 200px;" class="card-img-top object-fit-cover" alt="{{this.name}}">
      <div class="card-body d-flex flex-column justify-content-center">
        <h5 class="card-title text-center">{{this.name}}</h5>
        <p class="card-text text-center">
          {{#if this.description}}
            {{this.description}}
          {{else}}
            Description
          {{/if}}
        </p>
        <button type="button" class="btn btn-danger">ADD TO CART!</button>
      </div>
    </div>
  {{/each}}
</section>
</main>
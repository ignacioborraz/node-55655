<main class="flex-grow-1 w-100 d-flex flex-column">
  <section id="background">
    <h1 class="title">CODER CINEMA</h1>
    <img id="arrow" src="/arrow.gif" alt="arrow" />
  </section>
  <h2 class="subtitle mt-4 mb-2 text-center">OUR MOVIES</h2>
  <span class="m-auto d-flex justify-content-between align-items-center">
    <input
      id="text"
      type="text"
      style="width: 360px"
      class="p-2 text-center"
      placeholder="search..."
    />
    <img
      style="width: 44px; padding: 2px"
      id="search"
      src="data:image/png;base64,"
    />
  </span>
  <section
    id="movies"
    class="d-flex flex-wrap justify-content-evenly w-100 mt-2 mb-4"
  >

    {{#each events}}
      <a
        href="/events/{{this._id}}"
        class="card m-2 anchor"
        style="width: 360px"
      >
        <img
          src="{{this.poster}}"
          style="height: 240px"
          class="card-img-top object-fit-cover"
          alt="{{this.title}}"
        />
        <h5 class="p-2 text-center card-title">{{this.title}}</h5>
      </a>
    {{/each}}
  </section>
  <span class="w-100 d-flex justify-content-center">
    {{#if prev}}
      <a
        class="btn btn-danger fs-5 m-4 mt-0"
        href="/?title={{filter}}&page={{prev}}"
      >PREV</a>
    {{/if}}
    {{#if next}}
      <a
        class="btn btn-danger fs-5 m-4 mt-0"
        href="/?title={{filter}}&page={{next}}"
      >NEXT</a>
    {{/if}}
  </span>
</main>
<script src="/scripts/index.js"></script>